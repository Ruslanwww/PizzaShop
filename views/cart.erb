<h2>Your cart</h2>

<table class="table table-striped"> 
	<thead> 
		<tr> 
			<th>#</th> 
			<th>Name</th> 
			<th>Price</th> 
			<th>Qty</th> 
		</tr> 
	</thead> 
	<tbody>
		<% x = 1 %>
		<% total_price = 0 %>
		<% total_qty = 0 %>

		<% @items.each do |item| %>
			
			<tr> 
				<th scope="row"><%= x %></th> 
				<td><%= item[0].title %></td> 
				<td><%= item[0].price %> $</td> 
				<td><%= item[1] %></td> 
			</tr> 
			<% x += 1 %>
			<% total_price += item[0].price * item[1].to_i %>
			<% total_qty += item[1].to_i %>
		<% end %>

		<tr> 
			<th>Total:</th> 
			<td></td> 
			<td><%= total_price %> $</td> 
			<td><%= total_qty %></td> 
		</tr> 
	</tbody> 
</table>

<form action="/place_order" method="POST">
  <input type="hidden" name="order[orders_input]" value="<%= @orders_input %>">
  <div class="form-group">
    <label for="name">Name:</label>
    <input name="order[name]" type="text" class="form-control" id="name" placeholder="Name">
  </div>

  <div class="form-group">
    <label for="phone">Phone:</label>
    <input name="order[phone]" type="text" class="form-control" id="phone" placeholder="Phone">
  </div>

  <div class="form-group">
    <label for="address">Address:</label>
    <textarea name="order[address]" class="form-control" id="address" placeholder="Address"></textarea>
  </div>

  <button type="submit" class="btn btn-lg btn-success">Place this order!</button>
  <button class="btn btn-lg btn-danger" onclick="return cancel_order()">Cancel</button>
</form>