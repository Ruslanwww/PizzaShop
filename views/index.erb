<h2>Welcome to Pizza Shop!</h2>

<div class="row">
	<% @products.each do |product| %>
		<div class="col-md-4">

			<div>
				<%= product.title %>
			</div>

			<div>
				<img src="<%= product.path_to_image %>" height="200" width="250">
			</div>

			<div>
				<%= product.description %>
			</div>

			<div>
				Price: <%= product.price %>$
			</div>

			<div>
				Size: <%= product.size %> cm
			</div>

	 		<div>
				<button class="btn btn-sm btn-success" onclick="add_to_cart(<%= product.id %>)">Add to cart</button>
			</div>

		</div>
	<% end %>
</div>


